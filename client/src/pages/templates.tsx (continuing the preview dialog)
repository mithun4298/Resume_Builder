              <div className="border rounded-lg overflow-hidden bg-white">
                <div className="transform scale-75 origin-top-left" style={{ width: '133.33%', height: '133.33%' }}>
                  <previewTemplate.component data={sampleResumeData} />
                </div>
              </div>
              
              <div className="mt-6 flex justify-between items-center">
                <div className="flex items-center gap-4">
                  <div className="text-sm text-gray-600">
                    <span className="font-medium">Category:</span> {previewTemplate.category}
                  </div>
                  <div className="text-sm text-gray-600">
                    <span className="font-medium">Difficulty:</span> {previewTemplate.difficulty}
                  </div>
                </div>
                
                <div className="flex gap-2">
                  <Button
                    variant="outline"
                    onClick={() => setPreviewTemplate(null)}
                  >
                    Close
                  </Button>
                  <Button
                    onClick={() => {
                      setPreviewTemplate(null);
                      handleUseTemplate(previewTemplate.id);
                    }}
                  >
                    <Plus className="w-4 h-4 mr-2" />
                    Use This Template
                  </Button>
                </div>
              </div>
            </div>
          </DialogContent>
        </Dialog>
      )}

      {/* Create Resume Dialog */}
      {selectedTemplateId && (
        <Dialog open={!!selectedTemplateId} onOpenChange={() => setSelectedTemplateId("")}>
          <DialogContent className="sm:max-w-md">
            <DialogHeader>
              <DialogTitle>Create New Resume</DialogTitle>
              <p className="text-sm text-gray-600">
                Enter a title for your new resume using the selected template.
              </p>
            </DialogHeader>
            
            <div className="space-y-4 mt-4">
              <div>
                <Label htmlFor="resume-title" className="text-sm font-medium">
                  Resume Title
                </Label>
                <Input
                  id="resume-title"
                  placeholder="e.g., Software Engineer Resume"
                  value={newResumeTitle}
                  onChange={(e) => setNewResumeTitle(e.target.value)}
                  className="mt-1"
                  onKeyDown={(e) => {
                    if (e.key === 'Enter' && newResumeTitle.trim()) {
                      handleCreateResume();
                    }
                  }}
                />
              </div>
              
              {selectedTemplateId && (
                <div className="p-3 bg-gray-50 rounded-lg">
                  <div className="text-sm">
                    <span className="font-medium">Selected Template:</span>{" "}
                    {templates.find(t => t.id === selectedTemplateId)?.name}
                  </div>
                </div>
              )}
              
              <div className="flex gap-2 pt-4">
                <Button
                  variant="outline"
                  className="flex-1"
                  onClick={() => setSelectedTemplateId("")}
                >
                  Cancel
                </Button>
                <Button
                  className="flex-1"
                  onClick={handleCreateResume}
                  disabled={!newResumeTitle.trim() || createResumeMutation.isPending}
                >
                  {createResumeMutation.isPending ? (
                    <>
                      <div className="w-4 h-4 mr-2 animate-spin rounded-full border-2 border-white border-t-transparent" />
                      Creating...
                    </>
                  ) : (
                    <>
                      <Sparkles className="w-4 h-4 mr-2" />
                      Create Resume
                    </>
                  )}
                </Button>
              </div>
            </div>
          </DialogContent>
        </Dialog>
      )}

      {/* Featured Templates Section */}
      <section className="bg-white py-16">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="text-center mb-12">
            <h2 className="text-3xl font-bold text-gray-900 mb-4">
              Most Popular Templates
            </h2>
            <p className="text-lg text-gray-600">
              These templates are loved by thousands of job seekers
            </p>
          </div>
          
          <div className="grid grid-cols-1 md:grid-cols-3 gap-8">
            {templates.filter(t => t.popular).slice(0, 3).map(template => (
              <div key={template.id} className="text-center">
                <div className="aspect-[3/4] bg-gray-100 rounded-lg overflow-hidden mb-4 relative">
                  <div className="absolute top-2 left-2 z-10">
                    <Badge variant="default" className="bg-blue-600">
                      <Star className="w-3 h-3 mr-1" />
                      Popular
                    </Badge>
                  </div>
                  <div className="w-full h-full flex items-center justify-center">
                    <template.component data={sampleResumeData} scale={0.25} />
                  </div>
                </div>
                <h3 className="text-xl font-semibold text-gray-900 mb-2">
                  {template.name}
                </h3>
                <p className="text-gray-600 mb-4">{template.description}</p>
                <Button
                  onClick={() => handleUseTemplate(template.id)}
                  className="w-full"
                >
                  <Plus className="w-4 h-4 mr-2" />
                  Use Template
                </Button>
              </div>
            ))}
          </div>
        </div>
      </section>

      {/* Tips Section */}
      <section className="bg-gray-50 py-16">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="text-center mb-12">
            <h2 className="text-3xl font-bold text-gray-900 mb-4">
              Choose the Right Template
            </h2>
            <p className="text-lg text-gray-600">
              Tips to help you select the perfect template for your career
            </p>
          </div>
          
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <div className="text-center">
              <div className="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                <Star className="w-6 h-6 text-blue-600" />
              </div>
              <h3 className="text-lg font-semibold text-gray-900 mb-2">
                Industry Match
              </h3>
              <p className="text-gray-600 text-sm">
                Choose templates that align with your industry's expectations and culture.
              </p>
            </div>
            
            <div className="text-center">
              <div className="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                <Eye className="w-6 h-6 text-green-600" />
              </div>
              <h3 className="text-lg font-semibold text-gray-900 mb-2">
                ATS Friendly
              </h3>
              <p className="text-gray-600 text-sm">
                Ensure your template is compatible with Applicant Tracking Systems.
              </p>
            </div>
            
            <div className="text-center">
              <div className="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                <Sparkles className="w-6 h-6 text-purple-600" />
              </div>
              <h3 className="text-lg font-semibold text-gray-900 mb-2">
                Personal Style
              </h3>
              <p className="text-gray-600 text-sm">
                Select a design that reflects your personality and professional brand.
              </p>
            </div>
            
            <div className="text-center">
              <div className="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                <Filter className="w-6 h-6 text-orange-600" />
              </div>
              <h3 className="text-lg font-semibold text-gray-900 mb-2">
                Experience Level
              </h3>
              <p className="text-gray-600 text-sm">
                Match template complexity with your career stage and experience.
              </p>
            </div>
          </div>
        </div>
      </section>

      <Footer />
    </div>
  );
}